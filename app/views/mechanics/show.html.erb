<h3>Mechanic: <%= @mechanic.name%></h3>
<p>Years of Experience: <%= @mechanic.years_experience %></p>
<br>

<h4>Current rides they're working on:</h4>
<% @mechanic.open_rides_by_thrill.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<%# REFACTOR ADD RIDE FORM BELOW %>
<%= form_with url: "/mechanics/#{@mechanic.id}/mechanic_rides", method: :post do |form|%>
  <h3><%= form.label "Add a ride to workload:" %></h3><br>
  <p>Ride ID: <%= form.number_field :ride_id %></p>
  <br>
  <%= form.submit "Submit" %>
<% end %>
